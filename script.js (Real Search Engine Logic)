function search() {
    const q = document.getElementById("query").value;
    if (!q) return;

    document.getElementById("results").innerHTML = "Searching...";
    document.getElementById("images").innerHTML = "";

    /* TEXT INFORMATION – Wikipedia */
    fetch(`https://en.wikipedia.org/api/rest_v1/page/summary/${q}`)
        .then(res => res.json())
        .then(data => {
            if (data.extract) {
                document.getElementById("results").innerHTML = `
                    <div class="result">
                        <h2>${data.title}</h2>
                        <p>${data.extract}</p>
                        <a href="${data.content_urls.desktop.page}" target="_blank">
                            Read more on Wikipedia
                        </a>
                    </div>
                `;
            } else {
                document.getElementById("results").innerHTML = "No information found.";
            }
        });

    /* IMAGE SEARCH – Unsplash */
    fetch(`https://api.unsplash.com/search/photos?query=${q}&client_id=YOUR_UNSPLASH_API_KEY`)
        .then(res => res.json())
        .then(data => {
            data.results.slice(0, 6).forEach(photo => {
                const img = document.createElement("img");
                img.src = photo.urls.small;
                document.getElementById("images").appendChild(img);
            });
        });
}
function toggleChat() {
    const chat = document.getElementById("chatbot");
    chat.style.display = chat.style.display === "flex" ? "none" : "flex";
}

function sendMessage() {
    const input = document.getElementById("chatInput");
    const msg = input.value;
    if (!msg) return;

    const body = document.getElementById("chatBody");

    body.innerHTML += `<div class="user">${msg}</div>`;
    input.value = "";

    fetch(`https://en.wikipedia.org/api/rest_v1/page/summary/${msg}`)
        .then(res => res.json())
        .then(data => {
            if (data.extract) {
                body.innerHTML += `<div class="bot">${data.extract}</div>`;
            } else {
                body.innerHTML += `<div class="bot">Sorry, I couldn't find information on that.</div>`;
            }
            body.scrollTop = body.scrollHeight;
        });
}




