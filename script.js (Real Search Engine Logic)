async function search() {
    const query = document.getElementById("query").value;
    if (!query) return;

    document.getElementById("results").innerHTML = "Loading results...";
    document.getElementById("images").innerHTML = "";

    /* Wikipedia Search */
    const wikiURL = `https://en.wikipedia.org/api/rest_v1/page/summary/${query}`;
    fetch(wikiURL)
        .then(res => res.json())
        .then(data => {
            if (data.extract) {
                document.getElementById("results").innerHTML = `
                    <div class="result-item">
                        <h2>${data.title}</h2>
                        <p>${data.extract}</p>
                        <a href="${data.content_urls.desktop.page}" target="_blank">Read more</a>
                    </div>
                `;
            } else {
                document.getElementById("results").innerHTML = "No results found";
            }
        });

    /* Images from Unsplash */
    const imgURL = `https://api.unsplash.com/search/photos?query=${query}&client_id=YOUR_UNSPLASH_API_KEY`;
    fetch(imgURL)
        .then(res => res.json())
        .then(data => {
            data.results.slice(0,6).forEach(img => {
                const image = document.createElement("img");
                image.src = img.urls.small;
                document.getElementById("images").appendChild(image);
            });
        });
}
function startVoice() {
    if (!('webkitSpeechRecognition' in window)) {
        alert("Voice search not supported in this browser");
        return;
    }

    const recognition = new webkitSpeechRecognition();
    recognition.lang = "en-US";
    recognition.start();

    const micButton = document.querySelector(".search-box button");
    micButton.classList.add("listening");

    recognition.onresult = function(event) {
        const speechText = event.results[0][0].transcript;
        document.getElementById("query").value = speechText;
        micButton.classList.remove("listening");
        search();
    };

    recognition.onerror = function() {
        micButton.classList.remove("listening");
    };
}

create API key:

YOUR_UNSPLASH_API_KEY


